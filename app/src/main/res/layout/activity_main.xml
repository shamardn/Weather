<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="-16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rv_hourly"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/birds" />

        <TextView
            android:id="@+id/text_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            android:fontFamily="sans-serif-light"
            android:text="21"
            android:textColor="@color/white"
            android:textSize="96sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/celsius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="°C"
            android:textColor="@color/light_gray_color"
            android:textSize="48sp"
            app:layout_constraintStart_toEndOf="@+id/text_degree"
            app:layout_constraintTop_toTopOf="@+id/text_degree" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sunny"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_degree" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_hourly"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="96dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:listitem="@layout/hourly_item" />

        <include
            android:id="@+id/daily_layout"
            layout="@layout/daily_layout"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_hourly" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="24dp"
            android:backgroundTint="@color/blue_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/daily_layout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp">

                <TextView
                    android:id="@+id/text_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Details"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/image_half_circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="48dp"
                    android:src="@drawable/half_circle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:background="@color/blue_color"
                    app:layout_constraintBottom_toBottomOf="@+id/image_half_circle"
                    app:layout_constraintStart_toStartOf="@+id/image_half_circle">

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="@color/light_gray_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_value_feels_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19°C"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toStartOf="@+id/text_value_hum"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view" />

                    <TextView
                        android:id="@+id/text_feels_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feels like"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/text_value_feels_like"
                        app:layout_constraintStart_toStartOf="@id/text_value_feels_like"
                        app:layout_constraintTop_toBottomOf="@id/text_value_feels_like" />

                    <TextView
                        android:id="@+id/text_value_hum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="52%"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toStartOf="@+id/text_value_nnw"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/text_value_feels_like"
                        app:layout_constraintTop_toBottomOf="@+id/view" />

                    <TextView
                        android:id="@+id/text_hum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="@id/text_value_hum"
                        app:layout_constraintStart_toStartOf="@id/text_value_hum"
                        app:layout_constraintTop_toBottomOf="@id/text_value_hum" />

                    <TextView
                        android:id="@+id/text_value_nnw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24.1 km/h"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toStartOf="@+id/text_value_pressure"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/text_value_hum"
                        app:layout_constraintTop_toBottomOf="@+id/view" />

                    <TextView
                        android:id="@+id/text_nnw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NNW"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="@id/text_value_nnw"
                        app:layout_constraintStart_toStartOf="@id/text_value_nnw"
                        app:layout_constraintTop_toBottomOf="@id/text_value_nnw" />

                    <TextView
                        android:id="@+id/text_value_pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1010 hPa"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/text_value_nnw"
                        app:layout_constraintTop_toBottomOf="@+id/view" />

                    <TextView
                        android:id="@+id/text_pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pressure"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="@id/text_value_pressure"
                        app:layout_constraintStart_toStartOf="@id/text_value_pressure"
                        app:layout_constraintTop_toBottomOf="@id/text_value_pressure" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <ImageView
                    android:id="@+id/image_sunrise"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="24dp"
                    android:src="@drawable/sunrise"
                    tools:layout_editor_absoluteY="104dp"
                    app:layout_constraintStart_toStartOf="@+id/image_half_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/text_sunrise"
                    />

                <TextView
                    android:id="@+id/text_sunrise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:13"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="36dp"
                    app:layout_constraintStart_toStartOf="@+id/image_half_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/image_half_circle"
                    />

                <ImageView
                    android:id="@+id/image_sunset"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    android:src="@drawable/sunset"
                    app:layout_constraintEnd_toEndOf="@+id/image_half_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/text_sunset"
                   />

                <TextView
                    android:id="@+id/text_sunset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:13"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="36dp"
                    app:layout_constraintBottom_toBottomOf="@id/image_half_circle"
                    app:layout_constraintEnd_toEndOf="@id/image_half_circle"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>